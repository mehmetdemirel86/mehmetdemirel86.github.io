<script>
    document.getElementById("yil").textContent = new Date().getFullYear();

    const body = document.body;
    const toggle = document.getElementById('mobileMenuToggle');
    const drawer = document.getElementById('mobileDrawer');
    const backdrop = document.getElementById('mobileDrawerBackdrop');
    const closeBtn = document.getElementById('mobileDrawerClose');

    function openDrawer() {
        body.classList.add('mobile-drawer-open');
    }

    function closeDrawer() {
        body.classList.remove('mobile-drawer-open');
    }

    toggle.addEventListener('click', openDrawer);
    backdrop.addEventListener('click', closeDrawer);
    closeBtn.addEventListener('click', closeDrawer);

    // Drawer içindeki linklere tıklanınca kapansın
    drawer.querySelectorAll('a').forEach(function (link) {
        link.addEventListener('click', function () {
            closeDrawer();
        });
    });

    // SOL (desktop) accordion
    document.querySelectorAll('.accordion-header').forEach(function (header) {
        header.addEventListener('click', function () {
            const section = header.closest('.accordion-section');
            const isOpen = section.classList.contains('open');

            // Tek açık kalsın istiyorsak diğerlerini kapatalım
            document.querySelectorAll('.accordion-section').forEach(function (sec) {
                sec.classList.remove('open');
                const arrow = sec.querySelector('.accordion-arrow');
                if (arrow) arrow.textContent = '▸';
            });

            if (!isOpen) {
                section.classList.add('open');
                const arrow = section.querySelector('.accordion-arrow');
                if (arrow) arrow.textContent = '▾';
            }
        });
    });

    // MOBİL accordion
    document.querySelectorAll('.mobile-accordion-section').forEach(function (section) {
        const title = section.querySelector('.mobile-section-title');
        const arrow = section.querySelector('.mobile-arrow');

        title.addEventListener('click', function () {
            const isOpen = section.classList.contains('open');

            // Diğerlerini kapat
            document.querySelectorAll('.mobile-accordion-section').forEach(function (sec) {
                sec.classList.remove('open');
                const arr = sec.querySelector('.mobile-arrow');
                if (arr) arr.textContent = '▸';
            });

            if (!isOpen) {
                section.classList.add('open');
                if (arrow) arrow.textContent = '▾';
            }
        });
    });
</script>
</body>
</html>
